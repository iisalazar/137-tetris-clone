<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tetris137.WaitingRoom"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20.0" layoutX="200.0" layoutY="100.0">
        <Label fx:id="usernameLabel"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>
        <Label fx:id="ipLabel"/>
        <TextField fx:id="ipField" promptText="Enter the server IP"/>
        <Label fx:id="portLabel"/>
        <TextField fx:id="portField" promptText="Enter the server port"/>
        <Button fx:id="joinButton" text="Start Game" onAction="#joinGame"/>
    </VBox>
</AnchorPane>
